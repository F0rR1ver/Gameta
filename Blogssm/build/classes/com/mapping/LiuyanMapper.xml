<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.LiuyanDAO">

    <resultMap type="com.bean.Liuyan" id="BaseResultMap">
      <id column="id" property="id" jdbcType="INTEGER"/>
      <result column="mid" property="mid"/>
      <result column="xwid" property="xwid"/>
      <result column="content" property="content"/>
      <result column="savetime" property="savetime" />
    </resultMap>
    
    <select id="selectAll" parameterType="hashmap" resultMap="BaseResultMap">
      select * from liuyan where 1=1
      <if test="key!=null and key!=''">
        and mid in (select id from member where tname like "%"#{key}"%")
      </if>
      <if test="xwid!=null and xwid!=''">
        and xwid =#{xwid}
      </if>
      order by id desc
    </select>
    

	<select id="findById" resultType="com.bean.Liuyan" parameterType="int">
		select * from liuyan where id=#{id}
	</select>

	
	<update id="update" parameterType="com.bean.Liuyan">
	  update liuyan
	  <set>
	    <if test="mid!=null and mid!=''">
	       mid=#{mid},
	    </if>
	    <if test="content!=null and content!=''">
	       content=#{content},
	    </if>
	    <if test="savetime!=null and savetime!=''">
	       savetime=#{savetime},
	    </if>
	  </set>
	  where id=#{id}
	</update>
	
	<insert id="add" parameterType="com.bean.Liuyan">
	  insert into liuyan values(null,#{mid},#{xwid},#{content},#{savetime})
	</insert>
	
	<delete id="delete" parameterType="int">
	delete from liuyan where id=#{id}
	</delete>
	
	
</mapper>

